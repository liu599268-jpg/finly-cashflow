# QuickBooks OAuth Configuration
# Copy this file to .env and fill in your credentials

# QuickBooks App Credentials
# Get these from: https://developer.intuit.com/app/developer/myapps
QB_CLIENT_ID=your_client_id_here
QB_CLIENT_SECRET=your_client_secret_here

# OAuth Redirect URI
# Must match the redirect URI registered in your QuickBooks app
# For local development, use: http://localhost:8000/callback
QB_REDIRECT_URI=http://localhost:8000/callback

# QuickBooks Environment
# Options: sandbox, production
QB_ENVIRONMENT=sandbox

# QuickBooks Company ID (Realm ID)
# This will be obtained during OAuth flow
QB_COMPANY_ID=

# Database Configuration (Optional)
# Uncomment if using database storage
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=finly_cashflow
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# Application Settings
# Flask secret key for session management
SECRET_KEY=your_secret_key_here_change_in_production

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Forecast Settings
FORECAST_WEEKS=13
CONFIDENCE_LEVEL=0.80

# Data Refresh Interval (minutes)
DATA_REFRESH_INTERVAL=60
